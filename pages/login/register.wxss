.container{
  display: flex;
  flex-direction: column;
  border-top: solid #e5e5e5 1rpx;
  
}
/*每行样式  */
.content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: solid #e5e5e5 1rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
/*前六行输入框  */
.content .text{
  height: 60rpx;
  width: 100%;
}
/*第七行输入框  */
.content .text2{
  height: 60rpx;
  width: 640rpx;
}
/*输入框样式  */
.ph{
  color:#999999;
  font-weight: 300;
  font-size: 32rpx;
  line-height: 60rpx;
}
/*公司类型-箭头图标  */
.content image{
  height: 30rpx;
  width: 15rpx;
  margin-right: 12rpx;
}

/*下一步按钮样式  */
.confirm{
  width: 600rpx;
  height: 80rpx;
  border-radius: 20rpx;
  font-size: 35rpx;
  margin: 80rpx;
  background: #a53f35;
  color: white;
  line-height: 80rpx;
  font-weight: 300;
}

.picker{
  width: 100%;
  color:#999999;
  font-weight: 300;
  font-size: 32rpx;
  line-height: 60rpx;
}