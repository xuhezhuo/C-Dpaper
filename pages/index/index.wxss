.container{
  background-color: #f7f7f7;
}

.slide-image{
  width: 100%;
}

.company{
  margin: 0 auto;
  width: 94%;
  border-radius: 12rpx;
  background-color: #fff;
  position: relative;
  top: -125rpx;
  border: solid 1rpx rgba(240,240,240,0.72);
}

.search{
  margin: 0 auto;
  width: 94%;
  position:relative;
  top:-125rpx;
  margin-bottom: 24rpx;
}

.company .description{
  margin: 0 auto;
  width: 94%; 
  transition: all .4s ease-in-out;
  font-size: 26rpx;
  font-weight: 300;
  line-height: 36rpx; 
  margin-bottom: 21rpx;
  margin-top: -12rpx;
  padding-left: 27rpx;
  padding-right: 27rpx;
}

.company .brief{
  display: flex;
  flex-direction: row;
  height: 100%;
}

.brief .logo{
  width: 24%;
}

.brief .logo image{
  width: 152rpx;
  height: 152rpx;
  position: relative;
  left: 12rpx;
  top: 32rpx;
}

.brief .mention{
  width: 68%;
}

.brief .mention view{
  height: 109rpx;
}

.brief .mention .title{
  line-height: 150rpx;
  font-size: 28rpx;
  font-weight: 300;
  padding-top: 32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.mention .contact{
  font-size: 30rpx;
  line-height: 109rpx;
  font-weight: 300;
  display: flex;
  flex-direction: row;
}

.mention .contact .name{
  width: 25%;
}

.mention .contact .mobile{
  width: 75%;
}

.brief .arrow{
  width: 8%;
}

.brief .arrow image{
  width: 52rpx;
  height: 52rpx;
  position:relative;
  left: -7rpx;
  top: 88rpx;
  transition: 0.4s;
}

.brief .arrow image.active{
  transform: rotate(180deg);
}

.phone{
  width:50rpx;
  height:50rpx;
  position:relative;
  top:16rpx;
}

.search {
  margin-top: 22rpx;
}

.search input{
  text-align: center;
  background-color: #ccc;
  opacity: 0.52;
  padding: 8rpx; 
  border-radius: 6rpx;
  font-size: 28rpx;
}

.placeholder{
  color: #a53f35;
  font-size: 25rpx;
  font-weight: 300;
}

.item-wrapper{
  width: 100%;
  background-color: #f7f7f7;
  position:relative;
  top:-125rpx;
}

.item-wrapper .item {
  display: flex;
  flex-direction: column;
  margin-top:14rpx;
  margin-bottom: 21rpx;
  background-color: #fff;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}

.item-wrapper .item .title{
  padding: 12rpx;
  padding-left: 21rpx;
  /* font-weight: 300; */
  font-size: 35rpx;
  border-bottom: solid 2rpx #eee;
}

.item-wrapper .item .title text{
  border-left: solid 6rpx #a53f35;
  padding-left: 12rpx;
}

.item-wrapper .item .type{
  font-weight: 400; 
  margin: 0 auto;
  font-size: 34rpx;
  margin-top: 28rpx;
}

.item-wrapper .item .content{
  margin-top: 12rpx;
}

.item-wrapper .item .content .category{
  color: #a53f35;
  font-size: 30rpx;
  margin: 8rpx;
  padding-left: 14rpx;
}

.item-wrapper .item .content .select{
  font-size: 32rpx;
  font-weight: 300;
  /* margin-top: 16rpx;
  margin-bottom: 16rpx; */
  margin: 8rpx;
}

.item-wrapper .item .content .select text{
  padding-right: 30rpx;
  padding-left: 32rpx;
  border-right: solid 2rpx #ccc;
} 

.item-wrapper .item .content .select text:first-child{
  padding-left: 21rpx;
}